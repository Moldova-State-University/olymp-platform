{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<div class="wrapper">
		{% if auth_error %}
			<div>{{ auth_error.messageKey|trans(auth_error.messageData, 'security') }}</div>
		{% endif %}
		<form action="{{ path('app_login') }}" method="POST">
			<div class="form-group">
				<label for="email">Email:</label>
				<input class="form-control" type="text" id="email" name="_email" value="{{ last_email }}">
			</div>

			<div class="form-group">
				<label for="password">Password:</label>
				<input class="form-control" type="password" id="password" name="_password">
			</div>

			<input type="hidden" name="_target_path" value="{{ path('app_task_list') }}">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-primary" type="submit">Login</button>
		</form>
	</div>
{% endblock %}
