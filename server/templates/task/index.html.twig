{% extends 'base.html.twig' %}

{% block title %}Task
{% endblock %}

{% block body %}
	<style>
		.wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="wrapper">
		<div class="task">
			<div class="task__field task__name">
				<h1>ðŸ˜ƒ{{ task.name }}</h1>
			</div>

			<div class="task__field task__description">
				<h3>Description</h3><hr>
				<h7>{{ task.description | raw }}</h7>
			</div>

			<div class="task__field task__limits">
				<h3>Time And Memory Limit</h3><hr>
				<h7>Time Limit:
					{{ task.timeLimit }}, Memory Limit:
					{{ task.memoryLimit }}</h7>
			</div>

			<div class="task__field task__example">
				<h3>Example Input and Output</h3><hr>
				<h7>Example Input:
					{{ task.taskMeta.author }}, Example Output:
					{{ task.exampleOutput }}</h7>
			</div>

			<div class="task__field task__example">
				<h3>Author</h3><hr>
				<h7>{{ task.taskMeta.author }}</h7>
			</div>

            <div class="task__field task__example">
				<h3>Created</h3><hr>
				<h7>{{ task.taskMeta.createdAt | date("Y-m-d H:i:s") }}</h7>
			</div>

			<div class="task__field task__example">
				<h3>Input and Output files</h3><hr>
				{% for task in task.taskTests %}
					Input:
					{{ task.inputData}}
					| Output:
					{{ task.outputData }}<br>
				{% endfor %}
			</div>

		</div>

	</div>
{% endblock %}
